{

  "compilerOptions": {

    "target": "ES2020",

    "module": "ESNext",

    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "skipLibCheck": true,

    "moduleResolution": "bundler",

    "allowImportingTsExtensions": true,

    "resolveJsonModule": true,

    "isolatedModules": true,

    "noEmit": true,

    "jsx": "react-jsx",

    "baseUrl": ".",

    "paths": {

      "@/*": ["./src/*"],

      "@components/*": ["./src/components/*"],

      "@pages/*": ["./src/pages/*"],

      "@utils/*": ["./src/utils/*"],

      "@hooks/*": ["./src/hooks/*"],

      "@context/*": ["./src/context/*"],

      "@services/*": ["./src/services/*"],

      "@styles/*": ["./src/styles/*"],

      "@assets/*": ["./src/assets/*"]

    }

  },

  "include": ["src"],

  "references": [{ "path": "./tsconfig.node.json" }]

}
